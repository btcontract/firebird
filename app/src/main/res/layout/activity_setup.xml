<LinearLayout
    style="@style/StandardLinearLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        style="@style/XMarginFillingView"
        android:layout_marginTop="25dp"
        android:text="@string/welcome"
        android:textSize="22sp"/>

    <TextView
        style="@style/XMarginFillingView"
        android:text="@string/welcome_subtitle"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="10dp"/>

    <ernestoyaquello.com.verticalstepperform.VerticalStepperFormView
        app:form_title_text_color="@color/colorAccent"
        app:form_circle_background_color="@color/ln"
        app:form_allow_non_linear_navigation="false"
        app:form_display_step_buttons="false"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/stepper"/>

</LinearLayout>