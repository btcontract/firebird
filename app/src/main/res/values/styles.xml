<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/bg</item>
        <item name="android:textColor">#CFDAE6</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppThemeNoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeNoActionBarMain" parent="AppThemeNoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!-- item styles -->

    <style name="ActionButton">
        <item name="nb_focusColor">@color/ln</item>
        <item name="nb_textColor">@color/white</item>
        <item name="nb_borderColor">@color/buttonBorder</item>
        <item name="nb_backgroundColor">@color/buttonDefault</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="nb_borderWidth">2dp</item>
        <item name="nb_radius">6dp</item>
    </style>

    <style name="SlidingDialog">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/slide_hide</item>
    </style>

    <style name="GrayDivider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">#33999999</item>
    </style>

    <style name="StandardLinearLayout" parent="AppTheme">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@color/bg</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">top</item>
    </style>

    <!-- text styles -->

    <style name="FillingText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="MarginFillingText" parent="FillingText">
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>

    <!-- nachos -->

    <style name="DefaultChipSuggestionTextView">
        <item name="chipVerticalSpacing">4dp</item>
        <item name="chipHorizontalSpacing">6dp</item>
        <item name="chipBackground">@color/chip_material_background</item>
        <item name="chipTextSize">14sp</item>
        <item name="chipHeight">32dp</item>
    </style>
</resources>
