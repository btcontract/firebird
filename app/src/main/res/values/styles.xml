<resources>
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/bg</item>
        <item name="android:textColor">#CFDAE6</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppThemeNoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeNoActionBarMain" parent="AppThemeNoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!-- item styles -->

    <!--
    fancy:fb_disabledColor 	setDisableBackgroundColor(int) 	Disabled Color of button background
fancy:fb_disabledTextColor 	setDisableTextColor(int) 	Disabled Color of button text
fancy:fb_disabledBorderColor
    -->

    <style name="ActionButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="fb_textColor">@color/white</item>
        <item name="fb_disabledTextColor">@color/white</item>
        <item name="fb_borderColor">@color/buttonBorder</item>
        <item name="fb_disabledBorderColor">@color/buttonDisableBorder</item>
        <item name="fb_defaultColor">@color/buttonDefault</item>
        <item name="fb_disabledColor">@color/buttonDisableDefault</item>
        <item name="fb_focusColor">@color/material_blue_500</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="fb_borderWidth">2dp</item>
        <item name="fb_radius">6dp</item>
    </style>

    <style name="SlidingDialog">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/slide_hide</item>
    </style>

    <style name="GrayDivider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">#33999999</item>
    </style>

    <style name="StandardLinearLayout" parent="AppTheme">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@color/bg</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">top</item>
    </style>

    <!-- text styles -->

    <style name="FillingText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="BoundedText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:maxWidth">500dp</item>
    </style>

    <style name="MarginBoundedText" parent="BoundedText">
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>

    <!-- material stepper -->

    <style name="TextAppearance"/>

    <style name="TextAppearance.MaterialCompat"/>

    <style name="TextAppearance.MaterialCompat.Body1">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.MaterialCompat.Body2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Widget.Stepper.Done" parent="TextAppearance.MaterialCompat.Body1"/>

    <style name="TextAppearance.Widget.Stepper.Selected" parent="TextAppearance.MaterialCompat.Body2"/>

    <style name="TextAppearance.Widget.Stepper.Normal" parent="TextAppearance.MaterialCompat.Body1">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Widget.Stepper" parent="">
        <item name="step_line_color">@color/material_grey_500</item>
        <item name="step_normal_color">@color/material_grey_500</item>
        <item name="step_done_icon">@drawable/ic_done_white_16dp</item>
        <item name="step_activated_color">@color/material_blue_500</item>
        <item name="step_error_highlight_color">@color/material_red_500</item>
        <item name="step_animation_duration">@android:integer/config_shortAnimTime</item>
    </style>
</resources>
