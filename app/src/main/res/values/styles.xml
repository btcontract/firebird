<resources>
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/bg</item>
        <item name="android:textColor">#CFDAE6</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppThemeNoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeNoActionBarMain" parent="AppThemeNoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!-- item styles -->

    <style name="StandardLinearLayout" parent="AppTheme">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@color/bg</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="StandardText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="TransparentButton" parent="StandardText">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
