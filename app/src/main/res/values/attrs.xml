<resources>
    <declare-styleable name="BaseCircleIndicator">
        <attr name="ci_width" format="dimension"/>
        <attr name="ci_height" format="dimension"/>
        <attr name="ci_margin" format="dimension"/>
        <attr name="ci_animator" format="reference"/>
        <attr name="ci_animator_reverse" format="reference"/>
        <attr name="ci_drawable" format="reference"/>
        <attr name="ci_drawable_unselected" format="reference"/>

        <attr name="ci_orientation" format="enum">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>

        <attr name="ci_gravity">
            <flag name="top" value="0x30"/>
            <flag name="bottom" value="0x50"/>
            <flag name="left" value="0x03"/>
            <flag name="right" value="0x05"/>
            <flag name="center_vertical" value="0x10"/>
            <flag name="fill_vertical" value="0x70"/>
            <flag name="center_horizontal" value="0x01"/>
            <flag name="fill_horizontal" value="0x07"/>
            <flag name="center" value="0x11"/>
            <flag name="fill" value="0x77"/>
            <flag name="clip_vertical" value="0x80"/>
            <flag name="clip_horizontal" value="0x08"/>
            <flag name="start" value="0x00800003"/>
            <flag name="end" value="0x00800005"/>
        </attr>
    </declare-styleable>

    <!-- nachos -->

    <declare-styleable name="NachoTextView">
        <attr name="chipHorizontalSpacing" format="reference|dimension" />
        <attr name="chipBackground" format="reference|color"/>
        <attr name="chipCornerRadius" format="reference|dimension"/>
        <attr name="chipTextColor" format="reference|color"/>
        <attr name="chipTextSize" format="reference|dimension"/>
        <attr name="chipHeight" format="reference|dimension"/>
        <attr name="chipVerticalSpacing" format="reference|dimension"/>
    </declare-styleable>

    <!-- nobobutton -->

    <attr name="nb_borderWidth" format="dimension"/>
    <attr name="nb_borderColor" format="color"/>
    <attr name="nb_radius" format="dimension"/>
    <attr name="nb_backgroundColor" format="color"/>
    <attr name="nb_disableColor" format="color"/>
    <attr name="nb_focusColor" format="color"/>
    <attr name="nb_enabled" format="boolean"/>

    <attr name="nb_shape" format="integer">
        <flag name="rectangle" value="101"/>
        <flag name="oval" value="102"/>
    </attr>

    <declare-styleable name="NoboButton">
        <attr name="nb_borderWidth"/>
        <attr name="nb_borderColor"/>
        <attr name="nb_radius"/>
        <attr name="nb_backgroundColor"/>
        <attr name="nb_disableColor"/>
        <attr name="nb_focusColor"/>
        <attr name="nb_enabled"/>
        <attr name="nb_textColor" format="color"/>
        <attr name="nb_disabledTextColor" format="color"/>
        <attr name="nb_text" format="string"/>
        <attr name="nb_textAllCaps" format="reference|boolean"/>
        <attr name="nb_textStyle" format="integer">
            <flag name="normal" value="0"/>
            <flag name="bold" value="1"/>
            <flag name="italic" value="2"/>
        </attr>
        <attr name="nb_fontIcon" format="string"/>
        <attr name="nb_iconSize" format="dimension"/>
        <attr name="nb_iconColor" format="color"/>
        <attr name="nb_iconPosition" format="enum">
            <enum name="left" value="1"/>
            <enum name="right" value="2"/>
            <enum name="top" value="3"/>
            <enum name="bottom" value="4"/>
        </attr>
        <attr name="nb_drawableResource" format="reference"/>
        <attr name="nb_iconPadding" format="dimension"/>
        <attr name="nb_gravity" format="enum">
            <enum name="center" value="0"/>
            <enum name="left" value="1"/>
            <enum name="right" value="2"/>
            <enum name="top" value="3"/>
            <enum name="bottom" value="4"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="ViewButton">
        <attr name="nb_borderWidth"/>
        <attr name="nb_borderColor"/>
        <attr name="nb_radius"/>
        <attr name="nb_backgroundColor"/>
        <attr name="nb_disableColor"/>
        <attr name="nb_focusColor"/>
        <attr name="nb_shape"/>
        <attr name="nb_enabled"/>
    </declare-styleable>

    <!-- stepper -->

    <declare-styleable name="VerticalStepperFormView">
        <attr name="form_next_button_text" format="string" />
        <attr name="form_last_button_text" format="string" />
        <attr name="form_cancel_button_text" format="string" />
        <attr name="form_confirmation_step_title_text" format="string" />
        <attr name="form_confirmation_step_subtitle_text" format="string" />
        <attr name="form_circle_size" format="dimension" />
        <attr name="form_circle_text_size" format="dimension" />
        <attr name="form_title_text_size" format="dimension" />
        <attr name="form_subtitle_text_size" format="dimension" />
        <attr name="form_error_message_text_size" format="dimension" />
        <attr name="form_vertical_line_width" format="dimension" />
        <attr name="form_horizontal_margin_from_step_numbers_to_content" format="dimension" />
        <attr name="form_disabled_elements_background_color" format="color" />
        <attr name="form_circle_background_color" format="color" />
        <attr name="form_next_button_background_color" format="color" />
        <attr name="form_next_button_pressed_background_color" format="color" />
        <attr name="form_cancel_button_background_color" format="color" />
        <attr name="form_cancel_button_pressed_background_color" format="color" />
        <attr name="form_circle_text_color" format="color" />
        <attr name="form_title_text_color" format="color" />
        <attr name="form_subtitle_text_color" format="color" />
        <attr name="form_next_button_text_color" format="color" />
        <attr name="form_next_button_pressed_text_color" format="color" />
        <attr name="form_cancel_button_text_color" format="color" />
        <attr name="form_cancel_button_pressed_text_color" format="color" />
        <attr name="form_error_message_text_color" format="color" />
        <attr name="form_display_step_buttons" format="boolean" />
        <attr name="form_display_cancel_button_in_last_step" format="boolean" />
        <attr name="form_display_step_data_in_subtitle_of_closed_steps" format="boolean" />
        <attr name="form_display_different_background_color_on_disabled_elements" format="boolean" />
        <attr name="form_include_confirmation_step" format="boolean" />
        <attr name="form_allow_non_linear_navigation" format="boolean" />
        <attr name="form_allow_step_opening_on_header_click" format="boolean" />
        <attr name="form_close_last_step_on_completion" format="boolean" />
        <attr name="form_alpha_of_disabled_elements" format="float" />
    </declare-styleable>
</resources>